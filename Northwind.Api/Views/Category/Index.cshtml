@model ICollection<Category>



<div class="card">
    <h3>Kategoriler</h3>
    <div class="card-body">
        <a class="btn btn-primary" asp-action="Create">Yeni Kategori</a>
        <table class="table table-hower">
            <thead>
                <tr>
                    <td>Id</td>
                    <td>Adi</td>
                    <td>Tanimlama</td>
                    <td>Update</td>
                    <td>Delete</td>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.id</td>
                        <td>@item.name</td>
                        <td>@item.description</td>
                        <td><a class="btn btn-info" asp-action="Update" asp-route-id="@item.id">Update</a> </td>
                        <td><a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.id">Delete</a> </td>
                    </tr>
                }
            </tbody>

        </table>
    </div>
</div>

<div class="modal fade" id="categoryModal" role="dialog">
    <div class="modal-dialog" role="form">
        <div class="modal-content">
            <div class="modal-header">
                <h3 class="modal-title">Yeni Kategori</h3>
                <button type="button" class="btn-close" data-dismiss="modal">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form method="post">
                    <div class="form-group">
                        <label for="category-name" class="col-form-label">Name:</label>
                        <input type="text" class="form-control" id="category-name">
                        <input type="hidden" name="id" id="id" /> 
                    </div>
                    <div class="form-group">
                        <label for="description-text" class="col-form-label">Message:</label>
                        <textarea class="form-control" id="description-text"></textarea>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary" id="btnSave">Save</button>
            </div>
        </div>
    </div>
</div>